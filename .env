# ------------------------------------------------------------------------------
# DJANGO CORE
# ------------------------------------------------------------------------------
DJANGO_ENV=production
DEBUG=0
DJANGO_SECRET_KEY=GENERATE_STRONG_SECRET
ALLOWED_HOSTS=*

# ------------------------------------------------------------------------------
# PROCESS CONTROL
# ------------------------------------------------------------------------------
IS_PRIMARY=1
RUN_GUNICORN=1
PORT=5000

# ------------------------------------------------------------------------------
# DATABASE (Railway PostgreSQL)
# Railway yeh values khud inject karega
# ------------------------------------------------------------------------------
# DATABASE (Docker Local)
# ------------------------------------------------------------------------------
POSTGRES_DB=quickdash
# Change host from 'auto' to 'db' (the service name in docker-compose.yml)
POSTGRES_HOST=db
# Set actual credentials instead of 'auto'
POSTGRES_USER=quickdash
POSTGRES_PASSWORD=quickdash_secure
POSTGRES_PORT=5432
# ------------------------------------------------------------------------------
# REDIS (Railway Redis)
# ------------------------------------------------------------------------------
# ------------------------------------------------------------------------------
# REDIS (Docker Local)
# ------------------------------------------------------------------------------
# Change from the placeholder to the docker service name 'redis'
REDIS_URL=redis://redis:6379/0

# These will automatically use the value above
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ------------------------------------------------------------------------------
# AUTH / SECURITY
# ------------------------------------------------------------------------------
JWT_SIGNING_KEY=GENERATE_STRONG_JWT_KEY

# ------------------------------------------------------------------------------
# CORS / CSRF (Frontend baad me add hoga)
# ------------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# ------------------------------------------------------------------------------
# BUSINESS / 3RD PARTY
# ------------------------------------------------------------------------------
GOOGLE_MAPS_KEY=REAL_OR_DUMMY_KEY
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=REAL_SECRET            # âœ… FIXED NAME
RAZORPAY_WEBHOOK_SECRET=REAL_WEBHOOK_SECRET

# ------------------------------------------------------------------------------
# STORAGE
# ------------------------------------------------------------------------------
USE_S3=0

