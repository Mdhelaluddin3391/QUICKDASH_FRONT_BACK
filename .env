# ==========================================
# SYSTEM CONFIGURATION
# ==========================================
DJANGO_ENV=development
DJANGO_DEBUG=1
SECRET_KEY=dev-insecure-key-change-me
ALLOWED_HOSTS=*

# ==========================================
# DATABASE (Docker Service: db)
# ==========================================
POSTGRES_DB=quickdash
POSTGRES_USER=quickdash
POSTGRES_PASSWORD=quickdash_secure
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==========================================
# INFRASTRUCTURE (Redis & Celery)
# ==========================================
REDIS_URL=redis://redis:6379/0

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================
# Critical: Keep this separate from SECRET_KEY for token rotation
JWT_SIGNING_KEY=secure-jwt-signing-key-local

# Frontend Origins (Live Server ports)
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ==========================================
# EXTERNAL SERVICES (Third Party Keys)
# ==========================================
# Google Maps (Required for Geocoding & Tracking)
GOOGLE_MAPS_KEY=dummy_map_key

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_test_123456789
RAZORPAY_SECRET=dummy_secret
RAZORPAY_WEBHOOK_SECRET=dummy_webhook_secret

# SMS Provider (OTP)
SMS_PROVIDER_KEY=dummy_sms_key
SMS_PROVIDER_URL=https://api.sms-provider.com/send

# ==========================================
# DEPLOYMENT & STORAGE
# ==========================================
# Set to 1 for the main web container (runs migrations/static)
IS_PRIMARY=1

# File Storage (0 = Local Filesystem, 1 = AWS S3)
USE_S3=0

# AWS Credentials (Required only if USE_S3=1)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=quickdash-assets
AWS_S3_REGION_NAME=ap-south-1